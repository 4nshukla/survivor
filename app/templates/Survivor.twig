{% include 'header.twig' %}
<div class="container" style="text-align: right;">
        <h4>Hello, {{ user_data['name'] }} </h4>
</div>

<style>
    body {
    }

    .fixed {
        width: 250px;  /* the fixed width required */
        float: left;
        height: 100px;
        border-radius: 19px 19px 19px 19px;
        -moz-border-radius: 19px 19px 19px 19px;
        -webkit-border-radius: 19px 19px 19px 19px;
        border: 3px solid #a189a1;
        margin: 20 20 20 20;
    }

    hr{
        margin: 5px 0px 5px 0px;
    }
    .title{
        margin: 5px 0px;
    }
</style>
<div class="container">
    <div class="row">
        {% for weekly_score in weekly_socres %}
        <div class="col-md-3 fixed">
            <div class="title">{{ weekly_score['quarter'] }}</div><hr>
            <label><input type="radio" name="optradio">{{ weekly_score['away_team'] }}</label> {{ weekly_score['away_team_score'] }}<br/>
            <label><input type="radio" name="optradio">{{ weekly_score['home_team'] }}</label> {{ weekly_score['home_team_score'] }}
        </div>
        {% endfor %}
    </div>
</div>
