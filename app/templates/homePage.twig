{% include 'header.twig' %}
<div class="container">
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            <form role="form" id="form" action="" method="post">
                <div class="form-group">
                    {{ message }}
                </div>
                <div class="form-group">
                    <label for="email">Email: </label>
                    <input type="email" class="form-control" name="email" id="email" placeholder="PManning@gmail.com">
                </div>
                <div class="form-group">
                    <label for="password">Password: </label>
                    <input type="password" class="form-control" name="password" id="password">
                </div>
                <div class="form-group">
                    <input type="checkbox" name="keep_logged_in" value="Yes"> Keep me logged in!<br>
                </div>
                <button type="submit" class="btn btn-default pull-right">Login</button>
            </form>
        </div>
        <div class="col-sm-4"></div>
    </div>
</div>
{% include 'footer.twig' %}